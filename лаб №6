lst = [1, 2, 3, 4, 5]
print("Исходный список:", lst)
print("Обратный порядок:", lst[::-1])


def list_sort(lst):
    return sorted(lst, key=abs, reverse=True)

nums = [3, -7, 2, -10, 5]
print("Сортировка по модулю:", list_sort(nums))


def change(lst):
    if len(lst) >= 2:
        lst[0], lst[-1] = lst[-1], lst[0]
    return lst

numbers = [10, 20, 30, 40]
print("После замены:", change(numbers))
